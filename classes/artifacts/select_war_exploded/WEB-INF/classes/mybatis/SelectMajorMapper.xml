<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slxy.www.mapper.SelectMajorMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.slxy.www.model.SelectMajor">
        <id column="id" property="id" />
        <result column="maj_name" property="majName" />
        <result column="dep_id" property="depId" />
        <result column="maj_class_num" property="majClassNum" />
        <result column="maj_status" property="majStatus" />
        <result column="gmt_create" property="gmtCreate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, maj_name, dep_id, maj_class_num, maj_status, DATE_FORMAT(gmt_create, '%Y-%m-%d') AS gmt_create,
    </sql>

</mapper>
